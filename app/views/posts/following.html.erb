<% if user_signed_in? %>
  <div class="postindex-container">
    <div class="header-container">
      <div class="header">
        <div>
          <li class="bold-font"><%= link_to "Following", following_posts_path %></li>
        </div>
        <div>
          <li><%= link_to "Explore", root_path%></li>
        </div>
        <div>
          <li><%= link_to "Nearby", nearby_posts_path%></li>
        </div>
        <div>
          <li>
            <%= link_to search_posts_path do%>
              <i class="fa-solid fa-magnifying-glass icon"></i>
            <% end %>
          </li>
        </div>
      </div>
    </div>
  <% else %>
    <li class="footer-item">
      <%= link_to "Login", new_user_session_path, class: "footer-link" %>
    </li>
  <% end %>

  <div class="posts-container">
    <div class="posts">
      <% if @posts != [] %>
        <% @posts.each do |post| %>
          <%= render "post", post: post  %>
        <% end %>
        <%= render "shared/pagy" %>
      <% else %>
        <p>You have not followed anyone yet</p>
      <% end %>
    </div>
  </div>
</div>
