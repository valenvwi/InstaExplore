<% if user_signed_in? %>
  <div class="postindex-container">
    <div class="header-container">
      <div class="header">
        <div>
          <li><%= link_to "Following", following_posts_path %></li>
        </div>
        <div>
          <li><%= link_to "Explore", root_path%></li>
        </div>
        <div>
          <li class="bold-font"><%= link_to "Nearby", nearby_posts_path%></li>
        </div>
        <div>
          <li>
            <%= link_to search_posts_path do%>
              <i class="fa-solid fa-magnifying-glass icon"></i>
            <% end %>
          </li>
        </div>
      </div>
    </div>
  <% else %>
    <li class="footer-item">
      <%= link_to "Login", new_user_session_path, class: "footer-link" %>
    </li>
  <% end %>

  <div class="posts-container">
    <div class="posts">
      <% if current_user.location.nil? || current_user.location == "" %>
        <p>You have not set your location yet. Set your location <%= link_to "here",edit_user_path(current_user) %></p>

      <% else %>
        <% if @posts != [] %>
          <% @posts.each do |post| %>
            <%= render "post", post: post  %>
          <% end %>
          <%= render "shared/pagy" %>
        </div>
      <% else %>
        <p>There are no posts near you.</p>
      <% end %>
    <% end %>
  </div>
</div>
</div>
