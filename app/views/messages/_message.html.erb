<div id="message-<%= message.id %>">
    <div class="message-container cont-<%=message.user.id%>">
      <div class="avatar-<%=message.user.id%>">
      <%= link_to user_path(message.user), class:"text-decoration-none" do %>
        <% if message.user.avatar.key.nil? %>
            <%= cl_image_tag("ltjpdg0x26bhr6ylcphyygo1fi88", class:"avatar-xs", alt:"Avatar") %>
          <% else %>
            <%= cl_image_tag message.user.avatar.key, class:"avatar-xs", alt:"Avatar" %>
          <% end %>
        <% end %>
      </div>
      <div class="message-content msg-<%=message.user.id%>">
        <%= message.content %>
      </div>
    </div>
</div>
